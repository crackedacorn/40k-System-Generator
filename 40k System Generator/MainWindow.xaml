<Window x:Class="_40k_System_Generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_40k_System_Generator"
        mc:Ignorable="d"
        Title="40K System Generator" Height="500" Width="700"
        ResizeMode="NoResize">
    <Grid>
        <Button x:Name="buttonGenerateSystem" Content="GENERATE" HorizontalAlignment="Left" Margin="295,439,0,0" VerticalAlignment="Top" Width="75" Click="buttonGenerateSystem_Click"/>
        <ScrollViewer x:Name="scrollTestingOutput" Margin="0,-16,10,35" Height="450" VerticalAlignment="Bottom">
            <TextBox x:Name="boxTestingOutput" ScrollViewer.CanContentScroll="True" IsReadOnly="True" Height="450" Width="678" FontFamily="Verdana" FontSize="16" />
        </ScrollViewer>

    </Grid>
</Window>
